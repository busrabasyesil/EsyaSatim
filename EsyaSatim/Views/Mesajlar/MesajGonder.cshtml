@{
    ViewBag.Title = "MesajGonder";
    Layout = "~/Views/Shared/_KullaniciLayout.cshtml";
}
@model EsyaSatim.ViewModels.UrunlerIndex
<div class="row">
    <div class="col-md-12">
        <div class="breadcromb-area">
            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <div class="seipkon-breadcromb-left">
                        <h3>Mesaj Gönder</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="page-box">
            <div class="datatables-example-heading">
                <h3>Mesajınız</h3>
            </div>
            <form method="post" action="/Mesajlar/MesajGonder">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()
                    <input type="hidden" id="Alici_id" name="Alici_id" value="@ViewData["id"]" />
                    <div class="form-group">
                        <textarea style="width:1000px; height:300px;" name="Mesaj" class="the-area"></textarea>
                    </div>
                    <p>
                        <button type="submit" class="btn btn-success"> <i class="fa fa-envelope-o"></i>Gönder</button>
                    </p>

                }
            </form>
        </div>
    </div>
</div>
