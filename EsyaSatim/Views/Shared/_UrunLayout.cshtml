@{
    ViewBag.Title = "_UrunLayout";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

@model EsyaSatim.ViewModels.UrunlerIndex
<div class="box">
    <div class="container">
        @RenderBody()
    </div>
</div>
<div class="row">
    @foreach (var urun in Model.urunler)
    {

        <div class="tesla-carousel-items">
            <div class="col-md-3 col-xs-6">
                <div class="product">
                    <div class="product-cover">
                        <div class="product-cover-hover"><span><a href="@Url.Action("UrunDetay","Urunler", new {id= @urun.Id})">Detay</a></span></div>
                        <img src="~/Esyalar/@urun.ResimYolu" alt="product name" />
                    </div>
                    <div class="product-details">
                        <h1>@urun.Ad</h1>
                        <p>@urun.Aciklama</p>
                        <p>@urun.Email</p>
                        <div class="product-price">
                            @urun.Fiyat
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
</div>