
@{
    ViewBag.Title = "_UrunLayout";
    Layout = "~/Views/Shared/_KullaniciLayout.cshtml";
}
@model EsyaSatim.ViewModels.UrunlerIndex
<div class="box">
    <div class="container">
    </div>
</div>
<div class="row">
    @foreach (var urun in Model.urunler)
    {

        <div class="tesla-carousel-items">
            <div class="col-md-3 col-xs-6">
                <div class="product">
                    <div class="product-cover">
                        <img src="~/Esyalar/@urun.ResimYolu" style="border:solid 5px white; width:300px;height:400px" alt="Fotoğraf">
                    </div>
                    <div class="product-details">
                        <h1>@urun.Ad</h1>
                        @*<p>@urun.Aciklama</p>
                        <p>@urun.Email</p>*@
                        <div class="product-price">
                            @urun.Fiyat
                        </div>
                        <div class="btn-group">
                            <a href="@Url.Action("Duzenle","Urunler",new {urun.Id })" class="btn btn-xs btn-primary"><i class="glyphicon glyphicon-edit"></i>Duzenle</a>
                        </div>
                        <div class="btn-group">
                            <a href="@Url.Action("Sil","Urunler",new {urun.Id })" class="btn btn-xs btn-primary"><i class="glyphicon glyphicon-trash"></i>Sil</a>
                        </div>
                        <br/>
                        <br/>
                    </div>
                </div>
            </div>

        </div>
    }
</div>